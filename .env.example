# Discord bot token with MESSAGE CONTENT intent enabled
DISCORD_TOKEN=your-bot-token

# Numeric ID of the Discord channel where people post Wordle results
WORDLE_CHANNEL_ID=123456789012345678

# Path to the stats JSON file (relative paths are resolved from the project root)
DATA_PATH=./data/wordle_stats.json

# Optional customization
COMMAND_PREFIX=!
LEADERBOARD_SIZE=10

# HH:MM in UTC for the automatic leaderboard post (leave blank to disable)
LEADERBOARD_POST_TIME=00:05

# Channel for the scheduled leaderboard (defaults to WORDLE_CHANNEL_ID when unset)
LEADERBOARD_POST_CHANNEL_ID=123456789012345678
